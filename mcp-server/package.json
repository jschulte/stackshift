{
  "name": "stackshift-mcp",
  "version": "1.0.0",
  "description": "MCP server for StackShift - reverse engineering toolkit with manual control",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "stackshift",
    "reverse-engineering",
    "spec-driven",
    "github-spec-kit"
  ],
  "author": "Jonah Schulte",
  "license": "MIT",
  "type": "module",
  "bin": {
    "stackshift-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jschulte/stackshift.git",
    "directory": "mcp-server"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:security": "vitest run --grep security",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "asciichart": "^1.5.25",
    "handlebars": "^4.7.8",
    "markdown-it": "^14.1.0",
    "ora": "^8.2.0",
    "p-limit": "^5.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/babel__parser": "^7.0.0",
    "@types/handlebars": "^4.0.40",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.46.4",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
